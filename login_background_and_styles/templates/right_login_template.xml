<odoo>
    <template id="right_login_layout" name="right Login Layout">
        <t t-call="web.frontend_layout">
            <t t-set="html_data" t-value="{'style': 'height: 100%;'}" />
            <t t-set="body_classname" t-value="'bg-100'" />
            <t t-set="no_header" t-value="True" />
            <t t-set="no_footer" t-value="True" />
            <div id="login-wrapper"
                t-attf-style="background-image: url('#{background_src}'); background-color: #{background_color};">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="d-flex justify-content-center align-items-center imagecontainer">
                                <img width="80%" src="/fims_login_background_and_styles/static/src/cartoon.png"
                                    alt="image" />
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="h-100 d-flex flex-column align-items-end right-container-c">

                                <div class="w-90 h-100 color-orange">
                                    <div class="text-center mb-4">
                                        <!-- <img style="max-height:120px; max-width: 100%; width:auto" t-attf-src="/web/binary/company_logo{{ '?dbname='+db if db else '' }}" alt="Logo" /> -->
                                        <img style="max-height:120px; max-width: 100%; width:auto" t-att-src="image_data_uri(res_company.logo)" alt="Logo" />
                                    </div>

                                    <h2 id="titlewelcome">Welcome!</h2>
                                    <h2 id="titlelogin">Login</h2>
                                    <p id="titletext">To Your Account</p>
                                    <form class="w-100 mt-5" role="form" t-attf-action="/web/login" method="post"
                                        onsubmit="this.action = '/web/login' + location.hash">
                                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />

                                        <div t-if="databases and len(databases) &gt; 1"
                                            class="card-edit p-1 mb-3 bg-white rounded">
                                            <div class="input-group">
                                                <div class="input-group-prepend border-0">
                                                    <span class="input-group-prepend inputfiel-btn">
                                                        <a role="button" href="/web/database/selector"
                                                            class="btn btn-light bg-transparent border-0 text-orange"><i
                                                                class="fa fa-database" role="img" aria-label="Database"
                                                                title="Database"></i></a>
                                                    </span>
                                                </div>
                                                <input type="text" class="form-control border-0" placeholder="db"
                                                    aria-label="db" aria-describedby="basic-addon1" name="db"
                                                    t-att-value="request.db" id="db"
                                                    t-attf-class="form-control text-left  #{'form-control-sm' if form_small else ''}"
                                                    required="required" readonly="readonly" />
                                            </div>

                                        </div>
                                        <div class="card-edit p-1 mb-3 bg-white rounded">
                                            <div class="input-group">
                                                <div class="input-group-prepend border-0">
                                                    <span
                                                        class="input-group-text btn btn-light bg-transparent border-0 text-orange"
                                                        id="basic-addon1"><i class="fa fa-envelope"></i> </span>
                                                </div>
                                                <input type="text" placeholder="Email ..." name="login"
                                                    t-att-value="login" id="login" class="form-control border-0"
                                                    required="required" autofocus="autofocus" autocapitalize="off" />
                                            </div>

                                        </div>
                                        <div class="card-edit p-1 mb-3 bg-white rounded">
                                            <div class="input-group">
                                                <div class="input-group-prepend border-0">
                                                    <span
                                                        class="input-group-text btn btn-light bg-transparent border-0 text-orange"
                                                        id="basic-addon1"><i class="fa fa-key"></i></span>
                                                </div>
                                                <input type="password" placeholder="Password ..." name="password"
                                                    id="password" class="form-control border-0" aria-label="Username"
                                                    aria-describedby="basic-addon1" required="required"
                                                    autocomplete="current-password"
                                                    t-att-autofocus="'autofocus' if login else None" maxlength="4096" />
                                            </div>

                                        </div>

                                        <div class="d-flex flex-column align-items-center mb-5 mt-5">
                                            <p class="alert alert-danger" t-if="error" role="alert">
                                                <t t-esc="error" />
                                            </p>
                                            <p class="alert alert-success" t-if="message" role="status">
                                                <t t-esc="message" />
                                            </p>
                                            <button type="submit" class="btn dg-orange w-25">Login <i
                                            class="fa fa-arrow-right"></i></button>
                                            <t t-if="debug">
                                                <button class="btn btn-link color-orange" name="redirect"
                                                    value="/web/become">Log in as superuser</button>
                                            </t>


                                        </div>
                                        <div class="d-flex justify-content-between">
                                            <a class="color-orange" t-if="signup_enabled"
                                                t-attf-href="/web/signup?{{ keep_query() }}">Don't have an account?</a>
                                            <a class="color-orange" t-if="reset_password_enabled"
                                                t-attf-href="/web/reset_password?{{ keep_query() }}">Reset
                                                Password</a>
                                            <t t-if="not disable_database_manager">
                                                <a class="btn btn-link color-orange" href="/web/database/manager">Manage
                                                    Databases</a>
                                            </t>
                                        </div>
                                       
                                        <div class="o_login_auth" />
                                        <input type="hidden" name="redirect" t-att-value="redirect" />
                                    </form>

                                </div>


                            </div>

                        </div>

                    </div>

                </div>
            </div>
        </t>
    </template>

    <template id="login_background_and_styles.right_login_template" name="Login">
        <t t-call="login_background_and_styles.right_login_layout">

        </t>
    </template>
</odoo>